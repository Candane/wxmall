/* pages/search/search.wxss */

.search {
  height: 100%;
  background-color: #f8f8f8;
}

.header {
  height: 54px;
  padding: 0;
  box-sizing: border-box;
  box-shadow: 0 -1px 1px rgba(130, 130, 130, 0.1);
}

.goods-list {
  height: calc(100% - 54px);
}
.tips {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid #153be7;
  padding: 20rpx;
  font-size: 32rpx;
  color: #000;
  background: #fff;
}
