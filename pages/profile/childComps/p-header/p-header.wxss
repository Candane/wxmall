/* pages/profile/childComps/p-header/p-header.wxss */
.header {
  position: relative;
  display: flex;
  background: #e43130;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}

.avatar image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: #f2f2f2;
  vertical-align: middle;
}

.login-info {
  vertical-align: middle;
  margin-left: 30rpx;
}

.login-info .user-info {
  font-size: 36rpx;
  margin-top: 18rpx;
}
.login-info .login{
  margin-top: 14rpx
}
.arrow {
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
}

.arrow image {
  width: 60rpx;
  height: 60rpx;
}